{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(ts|tsx|js)$": "ts-jest"
  },
  "clearMocks": true,
  "preset": "ts-jest",
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1"
  },
  "globals": {
     "ts-jest": {
       "isolatedModules": true
     }
   }
}
